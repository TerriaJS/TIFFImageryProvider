{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "ES2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "lib"]
}
